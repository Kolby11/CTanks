{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build app",
            "type": "shell",
            "command": "make",
            "args": [
                "app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "watch app",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "find . -name '*.c' -o -name '*.h' | entr -c make app"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
